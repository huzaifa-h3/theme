{% if collection.products_count > 0 %}
<div class="collection-{{section.id}}">
    <h1 class="title-{{collection.title}}">{{ collection.title }}</h1>
    <div class="collection-products__grid">
        {% for product in collection.products %}
        <div class="product-{{product.id}}">
            {% render 'product-card', product: product %}
        </div>
        {% endfor %}
    </div>
</div>
{%- else -%}
<h1 class="result-not_found">No Products Found!</h1>
{% endif %}

<style>
    .collection-{{section.id}}
    {
        width: 100%;
        padding: 0 40px;
    }

    .collection-products__grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
        gap: 15px;
    }

    .title-{{collection.title}}
    {
        margin-bottom: 20px;
    }

    .product_image {
        width: 100%;
        height: 280px;
        object-fit: cover
    }

    .result-not_found {
        text-align: center;
    }
</style>