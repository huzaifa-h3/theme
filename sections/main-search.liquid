<style>
  .search-page {
    width: 100%;
    text-align: center;
    overflow: hidden;
    padding: 0 20px;
  }
  .search__result {
    text-align: left;
    font-weight: 500;
  }
  .search-results-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
    gap: 30px;
    width: 100%;
    margin-top: 20px;
  }

  .search-result-card {
    text-align: center;
  }

  .search-product_image {
    width: 100%;
    height: 280px;
    object-fit: cover;
    margin-bottom: 15px;
  }

  .search-result-card p {
    margin: 8px 0;
    line-height: 1.4;
    text-align: left;
  }

  .search-result-card p:first-of-type {
    font-size: 14px;
    color: #333;
    margin-bottom: 8px;
    text-align: left;
  }

  .search-result-card p:last-of-type {
    font-size: 16px;
    color: #000;
    text-align: left;
  }
</style>

<div class="search-page">
  <h1 class="search__result">Results</h1>

  {% if search.performed %}
    {% if search.results_count > 0 %}
      <div class="search-results-grid">
        {% for item in search.results %}
          <div class="search-result-card">
            <a href="{{ item.url }}" class="search__item">
              {% if item.object_type == 'product' %}
                {{
                  item.featured_image
                  | image_url: width: 300
                  | image_tag: class: 'search-product_image', alt: item.title
                }}
                <p>{{ item.title | truncate: 35 }}</p>
                <p>{{ item.price | money_with_currency }}</p>

              {% elsif item.object_type == 'collection' %}
                {{ item.image | image_url: width: 300 | image_tag }}
                <p>Collection: {{ item.title }}</p>

              {% elsif item.object_type == 'article' %}
                <p>Article: {{ item.title }}</p>
                <p>{{ item.excerpt | strip_html | truncate: 100 }}</p>

              {% else %}
                <p>{{ item.title }}</p>
              {% endif %}
            </a>
          </div>
        {% endfor %}
      </div>
    {% else %}
      <p>No results found for "{{ search.terms }}".</p>
    {% endif %}
  {% endif %}
</div>
